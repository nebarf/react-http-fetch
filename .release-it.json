{
  "git": {
    "tagName": "v${version}",
    "commitMessage": "Release v${version}",
    "requireBranch": "main"
  },
  "hooks": {
    "after:bump": [
      "yarn changelog",
      "git add CHANGELOG.md"
    ],
    "before:npm:release": [
      "rimraf lib",
      "yarn build"
    ]
  },
  "npm": {
    "publish": true
  }
}
