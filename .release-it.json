{
  "git": {
    "tagName": "v${version}",
    "commitMessage": "Release v${version}",
    "requireBranch": "main",
    "requireCommits": true
  },
  "hooks": {
    "before:init": [
      "yarn before-release-init"
    ],
    "after:bump": [
      "yarn changelog",
      "git add CHANGELOG.md"
    ],
    "before:npm:release": [
      "yarn clean-build",
      "yarn build"
    ]
  },
  "npm": {
    "publish": true
  }
}
